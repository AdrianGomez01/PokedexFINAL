<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="pokedex_style" parent="Theme.Pokedex">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColorHighlight">@color/dark_red</item>
        <item name="android:textColorLink">@color/red</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/red</item>
        <item name="android:theme">@style/Base.Theme.Pokedex</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/Base.Theme.Pokedex</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/dark_red</item>
        <item name="android:textColorLink">@color/red</item>
    </style>


</resources>